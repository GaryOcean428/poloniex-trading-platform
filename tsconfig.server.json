{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "incremental": true
  },
  "include": ["src/server/**/*", "src/trading/**/*", "src/types/**/*", "src/utils/**/*", "src/services/**/*"],
  "exclude": ["node_modules", "src/client/**/*"]
}
