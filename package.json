{
  "name": "polytrade",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @poloniex-platform/web dev",
    "dev:backend": "yarn workspace @poloniex-platform/api dev",
    "dev:frontend": "yarn workspace @poloniex-platform/web dev",
    "dev:api": "yarn workspace @poloniex-platform/api dev",
    "dev:web": "yarn workspace @poloniex-platform/web dev",
    "dev:docker": "docker-compose up",
    "build": "yarn build:api && yarn build:web",
    "build:dev": "yarn build:api && yarn workspace @poloniex-platform/web build:dev",
    "build:backend": "yarn bundle:shared && yarn workspace @poloniex-platform/api build",
    "build:frontend": "yarn bundle:shared && yarn workspace @poloniex-platform/web build",
    "build:api": "yarn bundle:shared && yarn workspace @poloniex-platform/api build",
    "build:web": "yarn bundle:shared && yarn workspace @poloniex-platform/web build",
    "build:packages": "yarn workspace @poloniex-platform/ts-types build && yarn workspace @poloniex-platform/ui build && yarn workspace @poloniex-platform/database build",
    "start": "yarn workspace @poloniex-platform/api start",
    "start:frontend": "yarn workspace @poloniex-platform/web start",
    "start:backend": "yarn workspace @poloniex-platform/api start",
    "start:api": "yarn workspace @poloniex-platform/api start",
    "start:web": "yarn workspace @poloniex-platform/web start",
    "lint": "yarn workspace @poloniex-platform/web lint && yarn workspace @poloniex-platform/api lint",
    "lint:fix": "yarn workspace @poloniex-platform/web lint:fix && yarn workspace @poloniex-platform/api lint:fix",
    "test": "yarn workspace @poloniex-platform/web test && yarn workspace @poloniex-platform/api test",
    "test:run": "yarn workspace @poloniex-platform/web test:run && yarn workspace @poloniex-platform/api test:run",
    "test:coverage": "yarn workspace @poloniex-platform/web test:coverage && yarn workspace @poloniex-platform/api test:coverage",
    "production-check": "node scripts/production-check.js",
    "workspace:health": "node scripts/workspace-health.js",
    "security:audit": "node scripts/security-audit.js",
    "deps:health": "node scripts/dependency-health.js",
    "quality:check": "yarn lint && yarn test:run && yarn security:audit && yarn deps:health",
    "hooks:install": "bash scripts/install-pre-commit-hook.sh",
    "ci:verify": "node scripts/verify-ci-commands.js",
    "sync:poloniex": "node scripts/sync-poloniex-futures-v3.js",
    "py:ingest:markets": "python kernels/core/ingest_markets.py",
    "bundle:shared": "node scripts/bundle-shared.mjs",
    "install:all": "yarn install",
    "railway:validate": "node scripts/validate-railway-deployment.mjs",
    "railway:compliance": "node scripts/railway-compliance-check.mjs",
    "railway:deploy": "yarn railway:validate && git push origin main",
    "deploy:check": "node scripts/validate-deployment-readiness.mjs",
    "deploy:check:frontend": "node scripts/verify-frontend-deployment.js",
    "affected": "node scripts/affected.mjs",
    "build:metrics": "node scripts/build-metrics.mjs",
    "metrics:analyze": "node scripts/build-metrics.mjs analyze",
    "codegen:types": "node scripts/codegen/generate-types.mjs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup:data": "node scripts/setup-data.mjs"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.1",
    "@types/react-is": "^19",
    "@types/seedrandom": "^3.0.8",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^3.2.4",
    "glob": "^11.0.3",
    "jsdom": "^27.0.0",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "axios": "^1.11.0",
    "crypto-js": "^4.2.0",
    "express": "^5.2.0",
    "express-rate-limit": "^8.1.0",
    "file-saver": "^2.0.5",
    "immer": "^10.1.1",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.2",
    "react-is": "^19.1.1",
    "seedrandom": "^3.0.5",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.18.3",
    "zustand": "^5.0.7"
  },
  "packageManager": "yarn@4.9.2"
}
