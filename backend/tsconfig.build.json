{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": [".shared-build/*", "../shared/*"]
    },
    "outDir": "./dist",
    "noEmitOnError": true,
    "allowJs": true
  },
  "include": ["src/**/*", ".shared-build/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*", "src/types/jest.d.ts"]
}
