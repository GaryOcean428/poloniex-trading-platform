# Backend Environment Variables for Railway Deployment

# Application Configuration
NODE_ENV=production
PORT=${{PORT}}

# Frontend URL (Railway inter-service communication)
FRONTEND_URL=https://${{frontend.RAILWAY_PUBLIC_DOMAIN}}

# Poloniex API Credentials (for backend API calls)
POLONIEX_API_KEY=your_poloniex_api_key_here
POLONIEX_API_SECRET=your_poloniex_api_secret_here
POLONIEX_PASSPHRASE=your_poloniex_passphrase_here

# Security Configuration
JWT_SECRET=your_secure_jwt_secret_here
SESSION_SECRET=your_secure_session_secret_here

# Database Configuration
DATABASE_URL=${{database.DATABASE_URL}}
REDIS_URL=${{redis.REDIS_URL}}

# Futures Trading Configuration
FUTURES_TRADING_ENABLED=true
FUTURES_RISK_LIMIT=10000
FUTURES_MAX_LEVERAGE=10
FUTURES_AUTO_TRADE=true

# Risk Management
RISK_MANAGEMENT_ENABLED=true
MAX_DAILY_LOSS=1000
MAX_POSITION_SIZE=50000
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Automated Trading Strategy
STRATEGY_ENABLED=true
STRATEGY_TYPE=momentum
STRATEGY_TIMEFRAME=1h
STRATEGY_RISK_PERCENTAGE=2

# WebSocket Configuration
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=5000
WS_PING_INTERVAL=30000

# CORS Configuration
CORS_ORIGIN=https://${{frontend.RAILWAY_PUBLIC_DOMAIN}}
