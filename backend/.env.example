# Backend Environment Variables (Railway-ready)

PORT=8765
NODE_ENV=production

# Database (Required)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PRIVATE_DOMAIN=localhost

# Poloniex API (Required for trading)
POLONIEX_API_KEY=your_api_key_here
POLONIEX_API_SECRET=your_api_secret_here

# JWT Security (REQUIRED - MUST be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_SECURE_32_CHAR_STRING

# API Encryption (Optional - uses JWT_SECRET if not provided)
# Generate with: openssl rand -base64 32  
API_ENCRYPTION_KEY=CHANGE_ME_TO_DIFFERENT_32_CHAR_STRING

# Frontend URL (Required for CORS)
FRONTEND_URL=https://${{polytrade-fe.RAILWAY_PUBLIC_DOMAIN}}

# CORS Configuration (comma-separated list of allowed origins)
# If not set, will use FRONTEND_URL as single allowed origin
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com,https://www.yourdomain.com
