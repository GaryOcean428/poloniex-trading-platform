{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "commands": [
        "cd backend && corepack enable",
        "cd backend && corepack prepare yarn@4.9.2 --activate",
        "cd backend && yarn install --immutable"
      ],
      "caches": ["yarn-cache"]
    },
    "build": {
      "inputs": [{"step": "install"}],
      "commands": ["cd backend && yarn build"]
    }
  },
  "caches": {
    "yarn-cache": {
      "directory": "/root/.cache/yarn",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["backend/dist", "backend/package.json"]
      }
    ],
    "startCommand": "cd backend && node dist/src/index.js",
    "variables": {
      "NODE_ENV": "production",
      "PORT": "${PORT}"
    }
  }
}
