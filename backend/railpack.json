{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "packages": {
    "node": "20",
    "yarn": "4.9.2"
  },
  "install": {
    "commands": [
      "cd .. && yarn install --no-immutable"
    ]
  },
  "build": {
    "commands": [
      "cd .. && yarn workspace backend build"
    ]
  },
  "deploy": {
    "command": "node dist/backend/src/index.js"
  }
}