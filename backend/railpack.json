{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packageManager": "npm",
  "node": {
    "version": "22"
  },
  "env": {
    "NODE_ENV": "production",
    "RAILWAY_ENVIRONMENT": "production"
  },
  "install": {
    "commands": [
      "cd backend && npm install"
    ]
  },
  "build": {
    "commands": [
      "node scripts/bundle-shared.mjs",
      "cd backend && npm run build"
    ]
  },
  "start": {
    "command": "cd backend && npm run start"
  },
  "health": {
    "path": "/healthz",
    "timeout": 300
  }
}
