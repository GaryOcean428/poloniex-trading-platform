{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20",
    "yarn": "4.9.2"
  },
  "steps": {
    "install": {
      "commands": [
        "npm i -g corepack@latest",
        "corepack enable",
        "corepack prepare yarn@4.9.2 --activate",
        "yarn install --immutable --immutable-cache"
      ]
    },
    "build": {
      "commands": [
        "yarn workspace backend run prebuild",
        "yarn workspace backend exec rm -rf dist",
        "yarn workspace backend run tsc -p tsconfig.build.json",
        "yarn workspace backend run node scripts/flatten-dist.mjs",
        "yarn workspace backend exec rm -rf .shared-build"
      ],
      "inputs": [{"step": "install"}]
    }
  },
  "deploy": {
    "startCommand": "yarn workspace backend run start",
    "inputs": [{"step": "build"}]
  }
}
