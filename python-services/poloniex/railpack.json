{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": { 
    "python": "3.13.2"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "commands": []
    }
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
