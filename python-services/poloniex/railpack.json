{
  "$schema": "https://schema.railpack.com",
  "provider": "railway",
  "version": "1",
  "packages": {
    "python": "3.11"
  },
  "install": {
    "commands": ["pip install -r requirements.txt"]
  },
  "build": {
    "commands": ["echo 'No build step required for Python service'"]
  },
  "deploy": {
    "command": "uvicorn health:app --host 0.0.0.0 --port ${PORT:-8000}"
  }
}
