{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install fastapi==0.112.0 uvicorn==0.30.1 requests==2.32.4"
      ],
      "caches": ["pip-cache"]
    }
  },
  "caches": {
    "pip-cache": {
      "directory": "/root/.cache/pip",
      "type": "shared"
    }
  },
  "deploy": {
    "startCommand": "uvicorn health:app --host 0.0.0.0 --port ${PORT}",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
