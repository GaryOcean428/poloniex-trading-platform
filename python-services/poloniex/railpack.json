{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ],
      "caches": ["pip-cache"]
    },
    "prepare": {
      "inputs": [{"step": "install"}],
      "commands": ["echo 'Preparing deployment files'"],
      "deployOutputs": [
        {"include": ["health.py", "ingest_markets.py"]}
      ]
    }
  },
  "caches": {
    "pip-cache": {
      "directory": "/root/.cache/pip",
      "type": "shared"
    }
  },
  "deploy": {
    "startCommand": "uvicorn health:app --host 0.0.0.0 --port ${PORT}",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
