{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "steps": {
    "install": {
      "commands": [
        "python -m pip install --upgrade pip",
        "pip install -r requirements.txt",
        "bash -lc 'command -v uv >/dev/null 2>&1 && echo \"uv found, attempting uv sync (non-fatal)\" && uv sync --no-dev || echo \"uv not found, skipping\"'"
      ]
    }
  },
  "deploy": {
    "startCommand": "uvicorn health:app --host 0.0.0.0 --port ${PORT:-8000} --workers 2 --loop uvloop --access-log"
  }
}
