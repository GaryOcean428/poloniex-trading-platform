{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "cd python-services/poloniex && pip install --upgrade pip",
        "cd python-services/poloniex && pip install -r requirements.txt"
      ],
      "caches": ["pip-cache"]
    }
  },
  "caches": {
    "pip-cache": {
      "directory": "/root/.cache/pip",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "install"
      }
    ],
    "startCommand": "cd python-services/poloniex && uvicorn health:app --host 0.0.0.0 --port ${PORT}",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
