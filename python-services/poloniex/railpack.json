{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "inputs": [
        {
          "local": true,
          "include": ["python-services/poloniex/requirements.txt"]
        }
      ],
      "commands": [
        "pip install --upgrade pip",
        "pip install -r python-services/poloniex/requirements.txt"
      ],
      "caches": ["pip-cache"]
    }
  },
  "caches": {
    "pip-cache": {
      "directory": "/root/.cache/pip",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "install"
      },
      {
        "local": true,
        "include": ["python-services/poloniex"]
      }
    ],
    "startCommand": "cd python-services/poloniex && uvicorn health:app --host 0.0.0.0 --port ${PORT}",
    "variables": {
      "PYTHONUNBUFFERED": "1"
    }
  }
}
