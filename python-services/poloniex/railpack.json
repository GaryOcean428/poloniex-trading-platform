{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": { 
    "python": "3.13.2"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "commands": []
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn main:app --host 0.0.0.0 --port $PORT"
  }
}
