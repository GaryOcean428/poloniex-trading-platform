{
  "version": "1",
  "build": {
    "provider": "python",
    "python": {
      "version": "3.11"
    },
    "env": {
      "PYTHONUNBUFFERED": "1",
      "PYTHONDONTWRITEBYTECODE": "1",
      "PATH": "$HOME/.local/bin:$PATH"
    },
    "steps": {
      "install-system": {
        "commands": [
          "apt-get update && apt-get install -y gcc python3-dev python3-pip"
        ]
      },
      "install-deps": {
        "commands": [
          "pip install --upgrade pip setuptools wheel",
          "pip install -r requirements.txt"
        ],
        "dependsOn": ["install-system"]
      },
      "verify-install": {
        "commands": [
          "python -c 'import uvicorn; print(f\"uvicorn installed: {uvicorn.__version__}\")'"
        ],
        "dependsOn": ["install-deps"]
      }
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn health:app --host 0.0.0.0 --port ${PORT:-8000} --workers 2 --loop uvloop --access-log",
    "healthCheckPath": "/healthz",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  }
}
