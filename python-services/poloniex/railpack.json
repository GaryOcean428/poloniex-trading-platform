{
  "$schema": "https://schema.railpack.com",
  "build": {
    "steps": {
      "install": {
        "commands": ["pip install --no-cache-dir -r requirements.txt"]
      }
    }
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300
  }
}