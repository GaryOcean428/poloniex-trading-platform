{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.13"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install uv",
        "cd kernels/core && uv pip install --system -e ."
      ]
    }
  },
  "deploy": {
    "startCommand": "cd kernels/core && uvicorn health:app --host 0.0.0.0 --port $PORT"
  }
}
