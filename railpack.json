{
  "$schema": "https://schema.railpack.com",
  "services": {
    "frontend": {
      "install": {
        "commands": [
          "yarn install --frozen-lockfile"
        ]
      },
      "build": {
        "commands": [
          "yarn workspace frontend build"
        ]
      },
      "start": {
        "command": "yarn workspace frontend start"
      }
    },
    "backend": {
      "install": {
        "commands": [
          "yarn install --frozen-lockfile"
        ]
      },
      "build": {
        "commands": [
          "yarn workspace backend build"
        ]
      },
      "start": {
        "command": "yarn workspace backend start"
      }
    },
    "poloniex-ml": {
      "install": {
        "commands": [
          "cd python-services/poloniex && pip install -r requirements.txt"
        ]
      },
      "start": {
        "command": "cd python-services/poloniex && python main.py"
      }
    }
  }
}