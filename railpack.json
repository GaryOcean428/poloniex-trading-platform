{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "metadata": {
    "name": "polytrade-monorepo"
  },
  "services": {
    "backend": {
      "root": "./backend",
      "build": {
        "provider": "node"
      }
    },
    "frontend": {
      "root": "./frontend",
      "build": {
        "provider": "node"
      }
    },
    "ml-worker": {
      "root": "./python-services/poloniex",
      "build": {
        "provider": "python"
      }
    }
  }
}