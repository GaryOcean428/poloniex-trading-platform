{
  "version": "1",
  "metadata": {
    "name": "poloniex-trading-platform",
    "description": "Monorepo orchestration config - DO NOT use for individual service builds"
  },
  "services": {
    "backend": {
      "root": "./backend",
      "config": "./backend/railpack.json",
      "description": "API service - Node/TypeScript/Express"
    },
    "frontend": {
      "root": "./frontend",
      "config": "./frontend/railpack.json",
      "description": "SPA service - React/Vite"
    },
    "ml-worker": {
      "root": "./python-services/poloniex",
      "config": "./python-services/poloniex/railpack.json",
      "description": "ML worker service - Python/FastAPI"
    }
  }
}
