{
  "$schema": "https://schema.railpack.com",
  "version": "1",
  "services": {
    "frontend": "./frontend",
    "backend": "./backend",
    "ml-worker": "./python-services/poloniex"
  },
  "steps": {
    "install": {
      "commands": [
        "bash -lc 'corepack enable'",
        "bash -lc 'corepack prepare yarn@4.9.2 --activate'",
        "bash -lc 'yarn install --immutable'"
      ]
    },
    "build": {
      "inputs": [{ "step": "install", "include": ["."] }],
      "commands": [
        "bash -lc 'echo monorepo root build complete'"
      ]
    }
  }
}
