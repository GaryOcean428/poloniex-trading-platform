# Copy this file to .env.local and fill in your values

# Poloniex API Configuration
VITE_POLONIEX_API_KEY=your_api_key_here
VITE_POLONIEX_SECRET=your_api_secret_here

# WebSocket Configuration
VITE_WS_URL=wss://ws.poloniex.com/ws/public
VITE_API_URL=https://api.poloniex.com

# Mock Mode Configuration
# Set to 'true' to force mock mode even with valid credentials
# Set to 'false' or remove to use live trading when credentials are present
VITE_FORCE_MOCK_MODE=false

# Application Configuration
VITE_APP_NAME=Poloniex Trading Platform
VITE_APP_VERSION=1.0.0

# Backend API (Railway deployment)
VITE_BACKEND_URL=https://polytrade-be.up.railway.app

# Optional: Sentry Error Tracking
VITE_SENTRY_DSN=

# Optional: Analytics
VITE_GA_TRACKING_ID=
