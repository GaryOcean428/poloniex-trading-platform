# Example environment variables for development
# Copy this to .env and fill in your actual values

# Poloniex API Credentials (required for live trading)
VITE_POLONIEX_API_KEY=your_poloniex_api_key_here
VITE_POLONIEX_API_SECRET=your_poloniex_api_secret_here  
VITE_POLONIEX_PASSPHRASE=your_poloniex_passphrase_here

# Mock Mode Configuration
VITE_FORCE_MOCK_MODE=false
VITE_DISABLE_MOCK_MODE=false

# Backend API Configuration (for autonomous trading)
VITE_BACKEND_URL=https://polytrade-be.up.railway.app

# WebSocket Configuration (optional - will be derived from VITE_BACKEND_URL if not set)
VITE_WS_URL=wss://polytrade-be.up.railway.app

# Railway Environment Variables (for Railway deployment)
VITE_RAILWAY_PUBLIC_DOMAIN=polytrade-be.up.railway.app
VITE_RAILWAY_PRIVATE_DOMAIN=polytrade-be.railway.internal

# Legacy API Configuration (optional)
VITE_API_URL=http://localhost:3000

# Poloniex API Configuration (optional overrides)
VITE_POLONIEX_API_BASE_URL=https://futures-api.poloniex.com/api/v1
VITE_POLONIEX_WS_URL=wss://futures-apiws.poloniex.com