# Frontend Environment Variables (Railway-ready)
# Copy this to .env and fill in your actual values

NODE_ENV=production

# Poloniex API Credentials (required for live trading)
VITE_POLONIEX_API_KEY=your_poloniex_api_key_here
VITE_POLONIEX_API_SECRET=your_poloniex_api_secret_here
VITE_POLONIEX_PASSPHRASE=your_poloniex_passphrase_here

# Backend API Configuration
VITE_API_URL=https://${{polytrade-be.RAILWAY_PUBLIC_DOMAIN}}
VITE_WS_URL=wss://${{polytrade-be.RAILWAY_PUBLIC_DOMAIN}}

# Mock Mode Configuration
VITE_FORCE_MOCK_MODE=false
VITE_DISABLE_MOCK_MODE=false

# Poloniex API Endpoints
VITE_POLONIEX_API_BASE_URL=https://futures-api.poloniex.com/api/v1
VITE_POLONIEX_WS_URL=wss://futures-apiws.poloniex.com

