# Frontend Environment Variables for Railway Deployment

# API Configuration
VITE_API_URL=https://your-backend-service.up.railway.app
VITE_WS_URL=wss://your-backend-service.up.railway.app

# Poloniex API Credentials
VITE_POLONIEX_API_KEY=your_poloniex_api_key_here
VITE_POLONIEX_API_SECRET=your_poloniex_api_secret_here
VITE_POLONIEX_PASSPHRASE=your_poloniex_passphrase_here

# Backend API URL (Railway inter-service communication)
VITE_BACKEND_URL=${{backend.RAILWAY_PUBLIC_DOMAIN}}

# Mock Mode Configuration
VITE_FORCE_MOCK_MODE=false
VITE_DISABLE_MOCK_MODE=false

# Application Configuration
VITE_APP_VERSION=${{RAILWAY_GIT_COMMIT_SHA}}
NODE_ENV=production

# Optional: GitHub Configuration (if needed)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here

# Optional: Supabase Configuration (if needed)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
