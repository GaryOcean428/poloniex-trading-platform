{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "steps": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare yarn@4.9.2 --activate",
        "yarn install --immutable"
      ],
      "caches": ["yarn-cache"]
    },
    "build": {
      "inputs": [{"step": "install"}],
      "commands": ["yarn build"],
      "deployOutputs": [
        {"include": ["dist"]},
        {"include": ["serve.js"]},
        {"include": ["package.json"]}
      ]
    }
  },
  "caches": {
    "yarn-cache": {
      "directory": "/root/.cache/yarn",
      "type": "shared"
    }
  },
  "deploy": {
    "startCommand": "node serve.js",
    "variables": {
      "NODE_ENV": "production",
      "PORT": "${PORT}"
    }
  }
}
