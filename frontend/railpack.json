{
  "$schema": "https://schema.railpack.com",
  "build": {
    "provider": "node",
    "nodeVersion": "20", 
    "packageManager": "yarn",
    "steps": [
      {
        "name": "setup-node",
        "command": "corepack enable && corepack prepare yarn@4.9.2 --activate"
      },
      {
        "name": "install",
        "command": "yarn install --immutable --immutable-cache",
        "dependsOn": ["setup-node"]
      },
      {
        "name": "build",
        "command": "yarn build", 
        "dependsOn": ["install"]
      }
    ]
  },
  "deploy": {
    "startCommand": "node serve.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}