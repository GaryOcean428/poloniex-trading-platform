{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20",
    "yarn": "4.9.2"
  },
  "steps": {
    "install": {
      "inputs": [
        {
          "local": true,
          "include": ["frontend/package.json", "frontend/.yarnrc.yml", "yarn.lock", ".yarnrc.yml"]
        }
      ],
      "commands": [
        "cd frontend",
        "corepack enable",
        "corepack prepare yarn@4.9.2 --activate",
        "yarn --version",
        "yarn install --immutable"
      ],
      "caches": ["yarn-cache"]
    },
    "build": {
      "inputs": [
        { "step": "install" },
        {
          "local": true,
          "include": ["frontend"]
        }
      ],
      "commands": [
        "cd frontend",
        "yarn build:deploy"
      ]
    }
  },
  "caches": {
    "yarn-cache": {
      "directory": "/root/.cache/yarn",
      "type": "shared"
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "build",
        "include": ["frontend/dist", "frontend/serve.js", "frontend/package.json"]
      }
    ],
    "startCommand": "cd frontend && node serve.js",
    "variables": {
      "NODE_ENV": "production",
      "PORT": "${PORT}"
    }
  }
}
