{
  "$schema": "https://schema.railpack.com",
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "steps": [
      {
        "name": "install",
        "command": "yarn install --immutable --immutable-cache"
      },
      {
        "name": "build",
        "command": "yarn build",
        "dependsOn": ["install"]
      }
    ]
  },
  "deploy": {
    "startCommand": "node serve.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
