{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packageManager": "yarn",
  "node": {
    "version": "22"
  },
  "env": {
    "NODE_ENV": "production",
    "RAILWAY_ENVIRONMENT": "production"
  },
  "install": {
    "commands": [
      "corepack enable",
      "corepack prepare yarn@4.9.2 --activate",
      "yarn install --immutable"
    ]
  },
  "build": {
    "commands": [
      "yarn build:frontend"
    ]
  },
  "start": {
    "command": "node serve.js"
  },
  "health": {
    "path": "/api/health",
    "timeout": 300
  }
}
