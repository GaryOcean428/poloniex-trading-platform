{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20",
    "yarn": "4.9.2"
  },
  "steps": {
    "install": {
      "commands": [
        "cd /app && npm i -g corepack@latest",
        "cd /app && corepack enable",
        "cd /app && corepack prepare yarn@4.9.2 --activate",
        "cd /app && yarn install --frozen-lockfile"
      ]
    },
    "build": {
      "commands": [
        "node prebuild.mjs",
        "vite build",
        "rm -rf .shared-build"
      ],
      "inputs": [{"step": "install"}]
    }
  },
  "deploy": {
    "startCommand": "node serve.js",
    "inputs": [{"step": "build"}]
  }
}
