{
  "$schema": "https://schema.railpack.com",
  "build": {
    "steps": {
      "install": {
        "commands": ["yarn workspaces focus frontend --production=false"]
      },
      "build": {
        "commands": ["yarn workspace frontend build"]
      }
    }
  },
  "deploy": {
    "startCommand": "yarn workspace frontend serve",
    "healthCheckPath": "/",
    "healthCheckTimeout": 300
  }
}